{
  "name": "mHelper",
  "description": "Маленький помощник в больших закупках",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://zakupki.gov.ru/*",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://zakupki.gov.ru/*"
      ],
      "js": [
        "application.js"
      ]
    }
  ]
}
